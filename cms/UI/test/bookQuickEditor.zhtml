<script>
//锁定按钮显示隐藏js方法
Page.onLoad(function(){
	var isLock = $V("IsLock");
	var lockUser = $V("LockUser");
	var userName = $V("UserName");
	if(isLock=='Y'){
		if(userName==lockUser){
			$('#Lock').hide();
			$('#ReleaseLock').show();
		}else{
			$('#Lock').hide();
			$('#ReleaseLock').disable();
			$('#BtnSave').disable();
			$('#BtnPublish').disable();
			$('#BtnToPublish').disable();
		}
	}else{
		$('#ReleaseLock').hide();
		$('#Lock').show();
	}
	
    //判断文档状态，如果是已发布则默认为浏览
	if (locals['contentScript'].Status == 30){
		var viewSelectBtn = $("#BtnPreview").getComponent('Button');
	    viewSelectBtn.setActiveItemById("View",false);
	}else{
		var viewSelectBtn = $("#BtnPreview").getComponent('Button');
		viewSelectBtn.setActiveItemById("Preview",false);
	}
	
});
</script>
